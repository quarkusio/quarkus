<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <groupId>\${groupId}</groupId>
    <artifactId>\${artifactId}</artifactId>
    <version>\${version}</version>
    <properties>
        <compiler-plugin.version>3.8.1</compiler-plugin.version>
        <maven.compiler.parameters>true</maven.compiler.parameters>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <quarkus-plugin.version>999-SNAPSHOT</quarkus-plugin.version>
        <quarkus.platform.artifact-id>quarkus-bom</quarkus.platform.artifact-id>
        <quarkus.platform.group-id>io.quarkus</quarkus.platform.group-id>
        <quarkus.platform.version>999-SNAPSHOT</quarkus.platform.version>
        <surefire-plugin.version>3.0.0-M5</surefire-plugin.version>
        <bootstrap.stack.name>quarkus-lambda-bootstrap</bootstrap.stack.name>
        <stack.jvm.name>\${project.artifactId}</stack.jvm.name>
        <stack.native.name>\${project.artifactId}-native</stack.native.name>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>\${quarkus.platform.group-id}</groupId>
                <artifactId>\${quarkus.platform.artifact-id}</artifactId>
                <version>\${quarkus.platform.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-amazon-lambda</artifactId>
            <version>999-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-test-amazon-lambda</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-junit5</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-maven-plugin</artifactId>
                <version>\${quarkus-plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>build</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>\${compiler-plugin.version}</version>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>\${surefire-plugin.version}</version>
                <configuration>
                    <systemPropertyVariables>
                        <java.util.logging.manager>org.jboss.logmanager.LogManager</java.util.logging.manager>
                        <maven.home>\${maven.home}</maven.home>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.0.0</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>src/main/resources/application.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@bootstrap -->
                        <id>bootstrap</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>aws</executable>
                            <arguments>
                                <argument>cloudformation</argument>
                                <argument>deploy</argument>
                                <argument>--profile</argument>
                                <argument>${quarkus.lambda.aws.cli.profile}</argument>
                                <argument>--region</argument>
                                <argument>${quarkus.lambda.aws.region}</argument>
                                <argument>--capabilities</argument>
                                <argument>CAPABILITY_NAMED_IAM</argument>
                                <argument>--stack-name</argument>
                                <argument>${bootstrap.stack.name}</argument>
                                <argument>--no-fail-on-empty-changeset</argument>
                                <argument>--template-file</argument>
                                <argument>src/main/resources/bootstrap-template.yaml</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@bootstrap-output -->
                        <id>bootstrap-output</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>aws</executable>
                            <arguments>
                                <argument>--profile</argument>
                                <argument>${quarkus.lambda.aws.cli.profile}</argument>
                                <argument>--region</argument>
                                <argument>${quarkus.lambda.aws.region}</argument>
                                <argument>cloudformation</argument>
                                <argument>describe-stacks</argument>
                                <argument>--stack-name</argument>
                                <argument>${bootstrap.stack.name}</argument>
                                <argument>--query</argument>
                                <argument>Stacks[0].Outputs</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@deploy -->
                        <id>deploy</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>sam</executable>
                            <arguments>
                                <argument>deploy</argument>
                                <argument>--profile</argument>
                                <argument>${quarkus.lambda.aws.cli.profile}</argument>
                                <argument>--region</argument>
                                <argument>${quarkus.lambda.aws.region}</argument>
                                <argument>--capabilities</argument>
                                <argument>CAPABILITY_NAMED_IAM</argument>
                                <argument>--stack-name</argument>
                                <argument>\${stack.jvm.name}</argument>
                                <argument>--no-fail-on-empty-changeset</argument>
                                <argument>--template-file</argument>
                                <argument>\${quarkus.lambda.sam.jvm.template}</argument>
                                <argument>--s3-bucket</argument>
                                <argument>${quarkus.lambda.deployment-bucket}</argument>
                                <argument>--parameter-overrides</argument>
                                <argument>Tracing=\${quarkus.lambda.tracing}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@deploy-native -->
                        <id>deploy-native</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>sam</executable>
                            <arguments>
                                <argument>deploy</argument>
                                <argument>--profile</argument>
                                <argument>${quarkus.lambda.aws.cli.profile}</argument>
                                <argument>--region</argument>
                                <argument>${quarkus.lambda.aws.region}</argument>
                                <argument>--capabilities</argument>
                                <argument>CAPABILITY_NAMED_IAM</argument>
                                <argument>--stack-name</argument>
                                <argument>\${stack.native.name}</argument>
                                <argument>--no-fail-on-empty-changeset</argument>
                                <argument>--template-file</argument>
                                <argument>\${quarkus.lambda.sam.native.template}</argument>
                                <argument>--s3-bucket</argument>
                                <argument>${quarkus.lambda.deployment-bucket}</argument>
                                <argument>--parameter-overrides</argument>
                                <argument>Tracing=\${quarkus.lambda.tracing}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@invoke-local -->
                        <id>invoke-local</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>sam</executable>
                            <arguments>
                                <argument>local</argument>
                                <argument>invoke</argument>
                                <argument>--template-file</argument>
                                <argument>\${quarkus.lambda.sam.jvm.template}</argument>
                                <argument>--event</argument>
                                <argument>\${quarkus.lambda.payload.file}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@invoke-local-native -->
                        <id>invoke-local-native</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>sam</executable>
                            <arguments>
                                <argument>local</argument>
                                <argument>invoke</argument>
                                <argument>--template-file</argument>
                                <argument>\${quarkus.lambda.sam.native.template}</argument>
                                <argument>--event</argument>
                                <argument>\${quarkus.lambda.payload.file}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@invoke-remote -->
                        <id>invoke-remote</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>src/main/resources/manage.sh</executable>
                            <arguments>
                                <argument>invoke</argument>
                                <argument>\${stack.jvm.name}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@invoke-remote-native -->
                        <id>invoke-remote-native</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>src/main/resources/manage.sh</executable>
                            <arguments>
                                <argument>invoke</argument>
                                <argument>\${stack.native.name}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@delete -->
                        <id>delete</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>aws</executable>
                            <arguments>
                                <argument>cloudformation</argument>
                                <argument>--profile</argument>
                                <argument>${quarkus.lambda.aws.cli.profile}</argument>
                                <argument>--region</argument>
                                <argument>${quarkus.lambda.aws.region}</argument>
                                <argument>delete-stack</argument>
                                <argument>--stack-name</argument>
                                <argument>${stack.jvm.name}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <!-- Run: mvn initialize exec:exec@delete-native -->
                        <id>delete-native</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>aws</executable>
                            <arguments>
                                <argument>cloudformation</argument>
                                <argument>--profile</argument>
                                <argument>${quarkus.lambda.aws.cli.profile}</argument>
                                <argument>--region</argument>
                                <argument>${quarkus.lambda.aws.region}</argument>
                                <argument>delete-stack</argument>
                                <argument>--stack-name</argument>
                                <argument>${stack.native.name}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>native</id>
            <activation>
                <property>
                    <name>native</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.quarkus</groupId>
                        <artifactId>quarkus-maven-plugin</artifactId>
                        <version>\${quarkus-plugin.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>native-image</goal>
                                </goals>
                                <configuration>
                                    <enableHttpUrlHandler>true</enableHttpUrlHandler>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
