<component-set>
  <components>
    <component>
        <role>org.apache.maven.lifecycle.Lifecycle</role>
        <implementation>org.apache.maven.lifecycle.Lifecycle</implementation>
        <role-hint>quarkus-extension-deployment</role-hint>
        <configuration>
            <id>attach-config-metadata</id>
            <phases>
                <phase>my-plugin-not-used-phase</phase>
            </phases>
            <default-phases>
                <prepare-package>
                    io.quarkus:quarkus-extension-deployment-maven-plugin:${project.version}:attach-config-metadata
                </prepare-package>
            </default-phases>
        </configuration>
    </component>
  </components>
</component-set>
